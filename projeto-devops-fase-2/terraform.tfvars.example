# Copy this file to terraform.tfvars and fill in your values
# terraform.tfvars is ignored by git for security

# AWS Configuration
aws_region = "us-east-1"

# Environment and Project Configuration
environment  = "dev"      # Options: dev, staging, prod
project_name = "website"  # Used for resource naming prefix

# VPC Configuration
vpc_id = "vpc-xxxxxxxxx" # Replace with your VPC ID
# subnet_id                  = null   # Optional: subnet for EC2 (for custom VPCs)
# associate_public_ip_address = null   # Optional: true/false for public IP (for custom VPCs)

# Security Configuration
ssh_allowed_ip = "0.0.0.0/0" # Replace with your IP in CIDR format (e.g., "200.106.133.23/32")
key_pair_name  = "your-key-pair-name" # Replace with your AWS Key Pair name

# Instance Configuration
instance_type = "t2.micro"
client_name   = "YourName" # Replace with your name or client name

# Terraform State Backend Configuration
terraform_state_bucket = "your-terraform-state-bucket" # Replace with your S3 bucket name
terraform_state_key    = "site/terraform.tfstate"

# ECR Configuration
ecr_repository_name = "site_prod"
ecr_image_tag       = "latest"   # Tag used by EC2 user_data to pull and run the container

# Optional: Override auto-generated names
# If not specified, names will be generated as: {environment}-{project_name}-{resource-type}
security_group_name = ""  # Leave empty for auto-generation
instance_name       = ""  # Leave empty for auto-generation
iam_role_name       = ""  # Leave empty for auto-generation
